<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/edit_shift_count"
        android:layout_alignEnd="@+id/edit_salary"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Рассчет плана на месяц"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_salary"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_fragment_inp_style"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Желаемая зарплата"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_shift_count"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@id/edit_salary"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/dialog_fragment_inp_style"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Кол-во смен"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_salary"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="@+id/edit_salary"
        app:layout_constraintTop_toBottomOf="@+id/edit_salary"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>